{
  "name": "scripts",
  "version": "1.0.0",
  "private": true,
  "description": "Common scripts for managing cinema data",
  "main": "index.js",
  "bin": {
    "scripts": "index.js"
  },
  "scripts": {
    "test": "jest",
    "format": "prettier \"./**/*.js(on)?\" --write --write && prettier \"./**/*.md\" --write --prose-wrap=always",
    "populate:output": "./scripts/get-latest-release-assets.sh",
    "retrieve": "TZ=Europe/London node index.js retrieve",
    "transform": "TZ=Europe/London node index.js retrieve transform",
    "clear:cache": "rm -rf ./cache && git checkout ./cache",
    "clear:output": "rm -rf ./output && git checkout ./output",
    "clear:all": "npm run clear:cache && npm run clear:output"
  },
  "author": "Alistair Brown <github@alistairjcbrown.com>",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cheerio": "^1.0.0-rc.12",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "fast-diff": "^1.3.0",
    "html-entities": "^2.5.2",
    "moviedb-promise": "^4.0.7",
    "playwright": "^1.49.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "replace-special-characters": "^1.2.7",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@pollyjs/adapter-fetch": "^6.0.6",
    "@pollyjs/adapter-node-http": "^6.0.6",
    "@pollyjs/core": "^6.0.6",
    "@pollyjs/persister-fs": "^6.0.6",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "setup-polly-jest": "^0.11.0"
  }
}
